	#Obtenemos Interfaces disponibles en el equipo remoto
	def obtenerinterfaces(self):
		interf=[]
		for i in ssh_cliente.comando('ifconfig |grep Link |grep -e ^[A-Za-z] |cut -d " " -f 1'): 
			interf.append(i.rstrip())
		return interf

